{
  "name": "spotify-dance-client",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "s.js",
      "use": "@now/node",
      "config": { "maxLambdaSize": "100mb" }
    }
  ],
  "routes": [
    { "src": "/s/(?<id>[^/]+)", "dest": "s.js" },
    { "src": "^/static/js/(.*)", "dest": "/js/$1" },
    { "src": "^/static/media/(.*)", "dest": "/media/$1" },
    { "src": "^/favicon.ico", "dest": "/favicon.ico" },
    { "src": "^/manifest.json", "dest": "/manifest.json" },
    { "src": "^/(.*)", "dest": "/index.html" }
  ]
}
